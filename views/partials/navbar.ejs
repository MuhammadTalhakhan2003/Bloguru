<style>
  .custom-navbar {
    background-color: #19002b;
  }
</style>

<% if (locals.error && locals.error.trim() !== '') { %>
  <div class="container mt-4">
    <div class="alert alert-danger" role="alert"><%= locals.error %></div>
  </div>
<% } %>
